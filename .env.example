# Shodan API key (direct / BYOK mode)
# Obtain yours at https://account.shodan.io
SHODAN_API_KEY=

# Override the Shodan API base URL (optional)
# Set this to route requests through a proxy / gateway endpoint.
# When unset, requests go directly to https://api.shodan.io
SHODAN_BASE_URL=

# Bearer token sent as Authorization header when using a proxy base URL (optional)
# Required only when SHODAN_BASE_URL points to an authenticated proxy.
SHODAN_AUTH_TOKEN=

# Override the Shodan CVEDB base URL (optional)
# When unset, requests go directly to https://cvedb.shodan.io
SHODAN_CVEDB_URL=

# Request timeout in milliseconds (default: 30000)
SHODAN_TIMEOUT=30000

# --- HTTP transport settings (only used when MCP_TRANSPORT=http) ---
MCP_TRANSPORT=stdio
MCP_HTTP_PORT=3001
MCP_HTTP_HOST=localhost
